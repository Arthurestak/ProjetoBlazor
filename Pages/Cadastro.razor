@page "/cadastro"

@using ProjetoInicial.Models

<PageTitle>Cadastro</PageTitle>

<Titulo texto="Cadastro"></Titulo>
<div class="container-sm d-flex justify-content-center flex-column col-6">
	<EditForm Model="@pessoa" OnSubmit="cadastrarPessoa">
		<div class="row">
			<div class="col-6">
				<label class="text-muted">Digite seu nome:</label>
				<InputText class="form-control" @bind-Value="@nome" />
			</div>
			<div class="col-6">
				<label class="text-muted">Digite seu email:</label>
				<InputText class="form-control" @bind-Value="@email" />
			</div>
		</div>

		<div class="row">
			<div class="col-4">
				<label class="text-muted">Telefone:</label>
				<InputText class="form-control " @bind-Value="@telefone" />
			</div>
			<div class="col-4">
				<label class="text-muted">CPF:</label>
				<InputText class="form-control" @bind-Value="@cpf" />
			</div>

			<div class="col-4">
				<label class="text-muted">Data Nascimento:</label>
				<InputDate class="form-control" min="1970-01-01" @bind-Value="@dataNasc" />
			</div>
		</div>
		<div>
			<label class="text-muted">Senha:</label>
			<InputText class="form-control" />
		</div>

		<div class="mt-3">
			<button class="btn btn-outline-primary w-100" type="submit">Cadastrar</button>
		</div>
	</EditForm>

</div>
@if (!string.IsNullOrWhiteSpace(nome) && !string.IsNullOrWhiteSpace(email) && !string.IsNullOrWhiteSpace(cpf) && !string.IsNullOrWhiteSpace(telefone))
{
	<div>
		<h3 class="text-primary text-center mt-5">Seja bem-vindo(a) @nome!</h3>
	</div>
	<div class="container-sm col-8">
		<div class="card p-4">
			<h5 class="text-muted">Nome: </h5>
			<h6>@nome</h6>
			<h5 class="text-muted">Email: </h5>
			<h6>@email</h6>
			<h5 class="text-muted">Telefone para contato: </h5>
			<h6>@telefone</h6>
			<h5 class="text-muted">Data Nascimento: </h5>
			<h6>@dataNasc</h6>
		</div>
	</div>
}

<div class="container-sm mt-5">
	<div class="card mt-5 painel p-4 alert-primary">
		<h3>Clicador</h3>

		<h5>@contagem cliques</h5>

		<button class="btn btn-primary" @onclick="contar">Clique em mim</button>
	</div>
</div>

@code {

	Pessoa pessoa = new();

	private void cadastrarPessoa(){

	}

	string nome = "";
	string email = "";
	string cpf = "";
	string telefone = "";
	DateOnly dataNasc;


	public int contagem = 0;

	public void contar()
	{
		contagem++;
	}
}
