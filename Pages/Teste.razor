	<label class="text-muted">Digite seu nome:</label>
	<input class="form-control" @bind-value=nome/>
</div>

<div class=" mt-3">
	<button @onclick="mudar" class="btn btn-outline-primary">Enviar</button>
</div>

@code {
	string nome = "Arthur Lopes Oliveira";

	void mudar(){
		nome = $"Olá!!";
	}
}
